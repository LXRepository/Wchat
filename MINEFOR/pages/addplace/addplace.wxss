/* pages/addplace/addplace.wxss */
page{
  width: 100%;
  height: 100%;
  font-size: 14px;
  background-color: #EDEDED;
}
.form{
  overflow: hidden;
}
.top{
  width: 100%;
  border-top: 10px solid #EDEDED;
  border-bottom: 10px solid #EDEDED;
  padding: 10rpx 20rpx;
  height:300rpx;
  background-color: white;
  overflow: hidden;
}
.top .Consignee{
  padding: 30rpx 0;
  box-sizing: border-box;
  width: 25%;
  height: 200rpx;
  float: left;
}
.top .c{
  width: 75%;
  float: left;
  line-height: 100rpx;
  height: 100rpx;
}
.top .c-name{
  border-bottom: 1px solid #EDEDED;
}
.top .c-sex .radio:nth-child(1){
  margin-right: 100rpx;
}
.top .c-sex .radio radio{
  margin-right: 50rpx;
}
.top .abouttel{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #EDEDED;
  float: left;
}
.top .abouttel .phone{ 
  float: left;
  line-height: 100rpx;
  height: 100rpx;
  width: 25%;
}   
.top .abouttel  .phone-number{
  float: left;
  line-height: 100rpx;
  height: 100rpx;
  width: 75%;
}                                                                                    



.middle{
  width: 100%;
  border-bottom: 20px solid #EDEDED;
  padding: 10rpx 20rpx;
  height:400rpx;
  background-color: white;
  overflow: hidden;
} 
.middle  text{
  width: 25%;
  height: 100rpx;
  line-height: 100rpx;
  float: left
}   
.middle  input{
  width: 75%;
  height: 100rpx;
  line-height: 100rpx;
  float: right;
} 
.middle .radio{
  margin-right: 10rpx;
}
.middle radio{
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top:50rpx;
  left: 20rpx;
}
.down{
  width: 100%;
}
.down button{
  width: 90%;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #00B26A;
  text-align: center;
  color: white;
  font-size: 14px;
}    

.tips{
  width: 360rpx;
  height: 100rpx;
  position: fixed;
  border-radius: 20rpx;
  text-align: center;
  line-height: 100rpx;
  top:30%;
  left: 27%;
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  z-index: 999;
}

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     