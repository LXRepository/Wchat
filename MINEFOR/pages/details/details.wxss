/* pages/details/details.wxss */
page{
  width: 100%;
  height: 100%;
}
view{
  float: left;
}
.banner{
  width: 100%;
  height:720rpx;
}
.title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  font-size: 14px;
  box-shadow: 0px -2px 2px #DEDEDE;
}
.addcart{
  width: 100%;
  height: 150rpx;
  float: left;
  font-size: 14px;
  box-shadow: 0px -2px 2px #DEDEDE;
}
.addcart text{
  width: 30%;
  float: left;
  line-height: 140rpx;
  text-align: center;
  font-size: 20px;
  color: red;
}
.addcart button{
  width: 32%;
  float: right;
  line-height: 100rpx;
  background-color: #47b34f;
  text-align: center;
  font-size: 14px;
  margin: 20rpx 20rpx 0 0;
  color: white;
}
.time{
  width: 100%;
  height: 85rpx;
}
.pj{
  width: 100%;
  height: 546rpx;
}
.sm{
  width: 100%;
  height: 519rpx;
}
.xh{
  width: 100%;
  height: 854rpx;
}
.count{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 100rpx;
  box-shadow: 0px -2px 2px #DEDEDE;
  background-color: white;
}
.count span{
  float: left;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background-color: #47b34f;
  color: white;
  text-align: center;
  z-index: 999;
}
.count button{
  width: 200rpx;
  height: 100rpx;
  float: right;
  text-align: center;
  background-color: #47b34f;
  color: white;
  border-radius: 0px;
  font-size: 16px;
}
.count image{
  float: left;
  width: 100rpx;
  height: 100rpx;
  position: relative;
  left: -39rpx;
  top:10rpx;
  z-index: 0;
  }