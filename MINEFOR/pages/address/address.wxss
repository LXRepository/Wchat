/* pages/address/address.wxss */
page{
  height: 100%;
}
.retailStore{
  width: 100%;
}
.choose-add{
  width: 100%;
  height: 100rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.choose-add label{
  height: 60rpx;
  border: 1px solid #CBC9C9;
  border-radius: 50rpx;
  display: flex;
  background-color:#f5f5f5; 
  position: relative;
}
.choose-add label .m-bbt{
  float: left;
  width: 25%;
  line-height: 60rpx;
  font-size: 14px;
  border-right: 1px solid #CBC9C9;
  text-align: center;
}
.choose-add label input{
  float: left;
  width: 75%;
  height: 60rpx;
  padding: 8rpx 20rpx;
  box-sizing: border-box;
  font-size: 12px;
}
.choose-add label image{
  position: absolute;
  left: 141rpx;
  top:21rpx;
  width: 30rpx;
  height: 26rpx;
}
.list-add{
  width: 100%;
  height: 100%;
}
.list-add image{
width: 100%;
height: 100%;
}
.list-add{
  width: 100%;
}
.list-add .nowaddress{
  width: 100%;
  height: 150rpx;
  position: relative;
}
.nowaddress span{
   position: absolute;
   right: 4px;
   line-height: 90rpx;
   font-size: 12px;
   color: #86D0FE;
}
.title{
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  color: #A5A2A0;
  font-size: 12px;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list-add .nowaddress .nowaddname{
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 14px;
}
.list-add .nearby .nearaddname{
  width:100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 14px;
}
.nearnamelist{
  display: inline-block;
  width:100%;
  height: 90rpx;
  line-height: 30rpx;
  box-sizing: border-box;
  font-size: 13px;
  color: #808080;
  border-bottom: 1px solid #DEDEDE;
}
.otheradd{
  width: 100%;
  height: 110rpx;
  border-top: 1px solid #DEDEDE;
  box-shadow: 0px -1px 2px #DEDEDE;
  position: fixed;
  bottom: 0px;
}
.otheradd button{
  border-radius: 0px;
  background-color: white;
  color: #08AD67;
  font-size: 13px;
  line-height: 110rpx;
}