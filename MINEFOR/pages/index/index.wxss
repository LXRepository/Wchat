/**index.wxss**/
page{
  height: 100%;
}
.all{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #EDEDED;
  padding: 0 20rpx;
}
.header span{
  line-height: 80rpx;
  font-weight: bolder;
  font-style: italic;
  color: #21CE4D;
  font-size: 15px;
  margin-right: 14rpx;
}
.header .search{
  height: 60rpx;
  background-color: #F5F5F5;
  border-radius: 15rpx;
  margin-right: 30rpx;
}
.header .search input{
  float: left;
  padding: 5rpx 30rpx;
  font-size: 13px;
  width: 300rpx;
}
.header .search button{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border:0px;
  background-color:#F5F5F5;
  outline: 0px;
  position: static;
}
.header .search button image{
  width: 41rpx;
  height: 35rpx;
  margin: 0 auto;
}
.ewm{
  width: 80rpx;
  height: 60rpx;
}



/* 内容 */
.content{
  flex: 1;
  overflow: auto;
  display: flex;
  flex-direction: row;
}
left-nav{
  width: 28%;
}
.left-nav{
  width: 28%;
  height: 100%;
  flex-wrap: wrap;
  overflow-y: auto;
}

.navli{
  width: 100%;
  line-height: 130rpx;
  font-size: 12px;
  text-align: center;
  color: #AAA7A7;
  background-color: #F5F5F5;
  text-indent: -146rpx;
}
.is_checked{
  width: 100%;
  line-height: 130rpx;
  font-size: 14px;
  text-align: center;
  background-color: white;
  color: #21CE4D;
  text-indent: -146rpx;
}
.content .right-menu{
  width: 72%;
  height: 100%;
}
swiper image{
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
}
swiper{
  height: 200rpx;
  padding: 20rpx;
}

.menu{
  width: 100%;
  height: 100%;
}
.m-li{
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  border-bottom: 1px solid #EDEDED;
  padding:20rpx;
  box-sizing: border-box;
  position: relative;
}
.m-li image{
  width: 150rpx;
  height: 150rpx;
}
.m-li .title{
  width: 60%;
  line-height: 90rpx;
  font-size: 16px;
  position: absolute;
  top:0rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.m-li .price{
  font-size: 14px;
  color: #F26906;
}
.m-li .add image{
  width: 59rpx;
  height: 54rpx;
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
}